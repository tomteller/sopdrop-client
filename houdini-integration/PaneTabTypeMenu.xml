<?xml version="1.0" encoding="UTF-8"?>

<!--
    Adds "Sopdrop Library" to Houdini's pane tab type menu
    (the "New Pane Tab Type" menu when clicking + on a pane).

    This file supplements $HFS/houdini/PaneTabTypeMenu.xml.
    The Houdini package system adds our root to $HOUDINI_PATH,
    so Houdini finds this automatically.
-->

<menuDocument>
    <menu>
        <separatorItem/>
        <actionItem id="pythonpanel::sopdrop_library">
            <label>Sopdrop Library</label>
        </actionItem>
    </menu>
</menuDocument>
