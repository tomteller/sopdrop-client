{
    "recommends": "Houdini >= 19.5",
    "env": [
        {
            "SOPDROP": "/CHANGE/THIS/TO/YOUR/sopdrop"
        },
        {
            "SOPDROP_HOUDINI_PATH": "$SOPDROP"
        },
        {
            "PYTHONPATH": {
                "value": "$SOPDROP/scripts",
                "method": "prepend"
            }
        },
        {
            "PYTHONPATH": {
                "value": "$SOPDROP/scripts/python",
                "method": "prepend"
            }
        },
        {
            "PYTHONPATH": {
                "value": "$SOPDROP/client",
                "method": "prepend"
            }
        }
    ],
    "path": "$SOPDROP"
}
